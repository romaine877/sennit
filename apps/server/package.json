{
  "name": "server",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "fastify": "^5.3.3",
    "@fastify/cors": "^11.0.1",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.0.1",
    "dotenv": "catalog:",
    "zod": "catalog:",
    "drizzle-orm": "catalog:",
    "@sennit/env": "workspace:*",
    "@sennit/db": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "typescript": "catalog:",
    "tsdown": "^0.16.5",
    "@sennit/config": "workspace:*"
  }
}
